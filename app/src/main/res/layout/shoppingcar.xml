<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_115"
    android:orientation="horizontal"
    android:padding="@dimen/dp_1"
    >
    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_60"
        android:background="#f75252"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:weightSum="1">
        <TextView
            android:id="@+id/del"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:ems="1"
            android:gravity="center"
            android:text="删除"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_38"
            android:layout_marginLeft="@dimen/dp_5"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginBottom="@dimen/dp_20"
        app:cardElevation="@dimen/dp_3"
        app:cardUseCompatPadding="true">

        <CheckBox
            android:id="@+id/shopcheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_45" />

        <ImageView
            android:id="@+id/shoppinghide"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_130"
            android:layout_marginRight="@dimen/dp_10">

            <TextView
                android:id="@+id/shoppingtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/shopprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="#f00"
                android:textSize="16sp" />

            <com.example.dell.zxqy.goods.myview.ShoppingCarView
                android:id="@+id/ShoppingCarView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"></com.example.dell.zxqy.goods.myview.ShoppingCarView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</com.daimajia.swipe.SwipeLayout>
