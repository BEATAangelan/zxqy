<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/show_linear"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/switchover"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@mipmap/common_btn_menu"
            />
        <ImageView
            android:id="@+id/glass"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_270"
            android:src="@drawable/fdj"
            android:layout_marginTop="@dimen/dp_15"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/search_linear"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_50"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/fan"
            />
        <EditText
            android:id="@+id/find_edit"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/button_shape"
            android:layout_marginTop="@dimen/dp_10"
            android:hint="@string/t"
            />
        <TextView
            android:id="@+id/search_text"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:text="搜索"
            />
    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_linear">
    <ScrollView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/fol_lnlay"
            android:orientation="vertical"
            android:clipChildren="false"
            android:layerType="software"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_170">
            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="@dimen/dp_300"
                android:layout_gravity="center"
                android:layout_height="@dimen/dp_150"
                android:layout_marginTop="@dimen/dp_10"
                >
            </android.support.v4.view.ViewPager>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal"
                android:background="@mipmap/bg_rxxp_syf"
                android:layout_marginTop="@dimen/dp_10"
                >
                <TextView
                    android:layout_width="@dimen/dp_300"
                    android:layout_height="wrap_content"
                    android:textColor="#fdd11e"
                    android:gravity="center"
                    android:text="@string/y"
                    android:textSize="16sp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/spot_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fdd11e"
                    android:text="..."
                    android:textSize="20sp"
                    >
                </TextView>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_165"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#fff"></android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal"
                android:background="@mipmap/bg_mlss_syf"
                android:layout_marginTop="@dimen/dp_10"
                >
                <TextView
                    android:layout_width="@dimen/dp_300"
                    android:layout_height="wrap_content"
                    android:textColor="#7f1efd"
                    android:gravity="center"
                    android:text="@string/u"
                    android:textSize="16sp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/spot_magic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#7f1efd"
                    android:text="..."
                    android:textSize="20sp"
                    >
                </TextView>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyc_mgci"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                android:background="#fff"
                ></android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal"
                android:background="@mipmap/bg_pzsh_syf"
                android:layout_marginTop="@dimen/dp_10"
                >
                <TextView
                    android:layout_width="@dimen/dp_300"
                    android:layout_height="wrap_content"
                    android:textColor="#fd1e59"
                    android:gravity="center"
                    android:text="@string/i"
                    android:textSize="16sp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/spot_quality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fd1e59"
                    android:text="..."
                    android:textSize="20sp"
                    >
                </TextView>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyc_quality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                ></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/search_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
        </com.jcodecraeer.xrecyclerview.XRecyclerView>
        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >
        <ImageView
            android:id="@+id/image_none"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_centerVertical="true"
            android:src="@mipmap/meiyoushop"
            android:layout_centerHorizontal="true"
            />
            <TextView
                android:id="@+id/text_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_none"
                android:text="没有更多商品了呦!!!"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
